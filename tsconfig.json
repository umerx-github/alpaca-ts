{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": "./src",
    "noImplicitThis": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noImplicitAny": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "typeRoots": ["./node_modules/@types/"],
    "declaration": true,
    "declarationDir": "./dist",
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "dist", "test", "conf", "example"],
  "compileOnSave": false
}
